/* pages/index/index.wxss */
.container {
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #00D9FF;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.stats-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(135deg, #1E2542 0%, #2A3F5F 100%);
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  margin: 0 8rpx;
}

.stat-card:first-child {
  margin-left: 0;
}

.stat-card:last-child {
  margin-right: 0;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #00D9FF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.quick-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.action-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #00D9FF 0%, #00B8E6 100%);
  color: #0A0E27;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C5A 100%);
  color: #FFFFFF;
}

.recent-section,
.latest-body-data {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.more {
  font-size: 28rpx;
  color: #00D9FF;
}

.log-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1E2542;
  padding: 32rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.log-info {
  flex: 1;
}

.log-name {
  display: block;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.log-date {
  font-size: 24rpx;
  color: #999;
}

.log-duration {
  font-size: 32rpx;
  color: #00D9FF;
  font-weight: bold;
}

.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #666;
}

.body-data-grid {
  display: flex;
  gap: 16rpx;
}

.data-item {
  flex: 1;
  background-color: #1E2542;
  padding: 32rpx;
  border-radius: 12rpx;
  text-align: center;
}

.data-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.data-value {
  display: block;
  font-size: 36rpx;
  color: #00D9FF;
  font-weight: bold;
}
