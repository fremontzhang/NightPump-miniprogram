/* pages/bodydata/bodydata.wxss */
.bodydata-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0A0E27 0%, #1A1F3A 100%);
  padding-bottom: 120rpx;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #1E2542;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  color: #8B9BB4;
  font-size: 32rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #00D9FF;
  color: #0A0E27;
  font-weight: bold;
}

/* 内容区域 */
.tab-content {
  padding: 32rpx;
}

/* 添加按钮 */
.add-btn {
  background: linear-gradient(135deg, #00D9FF 0%, #00B8E0 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 217, 255, 0.3);
}

.add-btn .icon {
  font-size: 48rpx;
  color: #0A0E27;
  margin-right: 16rpx;
}

.add-btn .text {
  font-size: 32rpx;
  color: #0A0E27;
  font-weight: bold;
}

/* 最新数据卡片 */
.latest-data-card {
  background: #1E2542;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #00D9FF;
}

.card-date {
  font-size: 26rpx;
  color: #8B9BB4;
}

.data-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.data-item {
  background: rgba(0, 217, 255, 0.05);
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.data-label {
  font-size: 26rpx;
  color: #8B9BB4;
  display: block;
  margin-bottom: 12rpx;
}

.data-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
}

/* 围度数据 */
.measurements-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
}

.section-title {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
  display: block;
  margin-bottom: 24rpx;
}

.measurements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.measurement-item {
  background: rgba(255, 107, 53, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.measurement-label {
  font-size: 24rpx;
  color: #8B9BB4;
  display: block;
  margin-bottom: 8rpx;
}

.measurement-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B35;
  display: block;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  flex: 1;
  background: #1E2542;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.stat-item .stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #00D9FF;
  display: block;
  margin-bottom: 16rpx;
}

.stat-item .stat-value.increase {
  color: #EF5350;
}

.stat-item .stat-value.decrease {
  color: #66BB6A;
}

.stat-item .stat-label {
  font-size: 26rpx;
  color: #8B9BB4;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #FFFFFF;
  display: block;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #8B9BB4;
  display: block;
}

/* 历史记录列表 */
.history-list {
  padding: 0;
}

.history-item {
  background: #1E2542;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.history-date {
  font-size: 28rpx;
  color: #00D9FF;
  font-weight: bold;
}

.history-delete {
  font-size: 24rpx;
  color: #FF6B35;
}

.history-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-data-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-label {
  font-size: 26rpx;
  color: #8B9BB4;
}

.history-value {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.history-measurements {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.05);
}

.measurement-tag {
  background: rgba(255, 107, 53, 0.1);
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #FF6B35;
}

/* 新增表单弹窗 */
.add-form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: #1E2542;
  border-radius: 32rpx 32rpx 0 0;
  width: 100%;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.modal-close {
  font-size: 64rpx;
  color: #8B9BB4;
  line-height: 1;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: scroll;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
}

.cancel-btn,
.save-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.1);
  color: #FFFFFF;
}

.save-btn {
  background: linear-gradient(135deg, #00D9FF 0%, #00B8E0 100%);
  color: #0A0E27;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #8B9BB4;
  margin-bottom: 16rpx;
}

.picker-view {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 24rpx;
}

.picker-text {
  font-size: 32rpx;
  color: #FFFFFF;
}

.form-section {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.form-row {
  margin-bottom: 24rpx;
}

.form-row:last-child {
  margin-bottom: 0;
}

.field-label {
  display: block;
  font-size: 26rpx;
  color: #8B9BB4;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
